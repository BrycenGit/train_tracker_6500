<h2> Train: <%= @train.color %></h2>
<br><br>
<h3> Cities </h3>
<br><br>
  <% if @train.cities.any? %>
    <ul>
      <% @train.cities.each do |city| %>
      <li><a href="/cities/<%= city.id %>"><%= city.name %></a></li>
    <% end %>
    </ul>
  <% else %>
    <p> This train does not have any current destinations. </p>  
  <% end %>   


<form action="/trains/<%= @train.id %>" method="post">
  <div class="form-group">
    <label for="name">Enter City</label>
    <input id="name" name="name" class="form-control" type="text">
    <label for="time">Enter stop time</label>
    <input id="time" name="stop_time" class="form-control" type="datetime-local">
  </div>
  <button type="submit" class="btn btn-success">Add City</button>
</form><br>
<br><br>

<form action="/trains/<%=@train.id %>" method="post">
<input name="_method" type="hidden" value="patch">
  <div class="form-group">    
    <label for="color"> Edit Train Name:</label>
    <input id="color" name="color" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-primary"> Update</button> 
</form>  
  
<br><br>

<form action="/trains/<%= @train.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Train</button>
</form>

<br>
<a href="/trains" class="btn btn-info">Return to Trains</a>   